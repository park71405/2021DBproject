<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="utf-8">
  <title>HAHA Shop</title>

  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div id="wrap">
    <div class ="header">
      <% include header.ejs %>
    </div>
    <hr />

    <div class="content">
      <br>
      <h3>Top. List</h3>
      <br>
      <div id = "box3">
        <form type='post'>
        <table>
          <tr>
            <th></th>
            <th>No.</th>
            <th>상품명</th>
            <th>개수</th>
            <th>할인율</th>
            <th>종류</th>
            <th>가격</th>
            <th>Cart<th>
          </tr>
          <% data.forEach(function(item, index){ %>
          <tr>
            <td><img src="/images/<%= item.image %>" width=100px, height=100px /></td>
            <td><%= item.no %></td>
            <td><%= item.name %></td>
            <td><%= item.count %></td>
            <td><%= item.discount %></td>
            <td><%= item.kind %></td>
            <td><%= item.price %></td>
            <td><a href="/cart/<%= item.id %>" >담기 </a></td>
          </tr>
          <% }); %>
        </table>
        </form>
      </div>
      <br>

    </div>

    <hr />
    <div class="footer">
      <% include footer.ejs %>
    </div>
  </div>
</body>
</html>
